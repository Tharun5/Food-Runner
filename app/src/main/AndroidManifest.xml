<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tharun.foodRunner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tharun.foodRunner.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tharun.foodRunner.activity.OrderPlacedActivity" />
        <activity android:name="com.tharun.foodRunner.activity.LoginRegisterActivity" />
        <activity android:name="com.tharun.foodRunner.activity.ProfileActivity" />
        <activity android:name="com.tharun.foodRunner.activity.CartActivity" />
        <activity android:name="com.tharun.foodRunner.activity.RestaurantMenuActivity" />
        <activity android:name="com.tharun.foodRunner.activity.OrderHistoryActivity" />
        <activity android:name="com.tharun.foodRunner.activity.Dashboard">

        </activity>
    </application>

</manifest>